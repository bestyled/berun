{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/.fusebox": true,
    "**/build": true,
    "**/public": true,
    "yarn.lock": true
  },
  "search.useIgnoreFiles": false,
  "javascript.implicitProjectConfig.experimentalDecorators": false,
  "workbench.colorTheme": "Default Light+",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": false,
  "editor.codeActionsOnSaveTimeout": 6000,
  "eslint.options": {
    "configFile": "./packages/berun-dev-scripts/config/.eslintrc.js"
  },
  "eslint.lintTask.options": "-c ${workspaceRoot}/packages/berun-dev-scripts/config/.eslintrc.js --ignore-path ${workspaceRoot}/.eslintignore --ext .ts,.js .",
  "eslint.lintTask.enable": true, 
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.alwaysShowStatus": true
}